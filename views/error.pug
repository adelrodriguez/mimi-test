extends layout

block styles
  link(
    rel='stylesheet'
    type='text/css'
    href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css'
  )
  link(
    rel='stylesheet'
    type='text/css'
    href='/css/styles.css'
  )

block content
  #error-content.ui.container
    h1#error-title Este resultado 
      span.highlight-coral no existe
    button#error-button.huge.ui.button ¡Descubre cuál candidato te representa!

block scripts
  script(
    src='https://code.jquery.com/jquery-3.1.1.min.js'
    integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8='
    crossorigin='anonymous'
  )
  script(
    src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js'
  )
  script.
    $('#error-button').click(function () {
      window.location.replace(window.location.origin);
    });